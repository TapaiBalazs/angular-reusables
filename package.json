{
  "name": "ng-reusables",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "concurrently -k -n \"APP,LIB\" -c \"green,magenta\" \"ng serve\" \"npm run build:libs:watch\"",
    "build:libs:watch": "concurrently -k -n \"LI,EH,AD\" -c \"yellow,blue,cyan\" \"npm run build:loading-indicator:watch\" \"npm run build:error-handler:watch\" \"npm run build:auth-directive:watch\"",
    "build:error-handler": "ng build error-handler",
    "build:auth-directive": "ng build authorisation",
    "build:loading-indicator": "ng build loading-indicator",
    "build:error-handler:watch": "wait-on -i 3000 -t 120000 -l http-get://localhost:4200/ -v && ng build loading-indicator --watch",
    "build:auth-directive:watch": "wait-on -i 3000 -t 120000 -l http-get://localhost:4200/ -v && ng build authorisation --watch",
    "build:loading-indicator:watch": "wait-on -i 3000 -t 1200000 -l http-get://localhost:4200/ -v && ng build error-handler --watch",
    "build": "ng build",
    "test": "ng test loading-indicator --watch false",
    "lint": "ng lint",
    "cypress:open": "wait-on -i 3000 -t 30000 -l http-get://localhost:4200/ -v && cypress open",
    "cypress:run": "cypress run"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "~10.1.0",
    "@angular/cdk": "^8.0.1",
    "@angular/common": "~10.1.0",
    "@angular/compiler": "~10.1.0",
    "@angular/core": "~10.1.0",
    "@angular/forms": "~10.1.0",
    "@angular/platform-browser": "~10.1.0",
    "@angular/platform-browser-dynamic": "~10.1.0",
    "@angular/router": "~10.1.0",
    "@btapai/ng-loading-indicator": "file:dist/loading-indicator",
    "@btapai/ng-error-handler": "file:dist/error-handler",
    "@btapai/ng-authorisation": "file:dist/authorisation",
    "core-js": "^3.1.3",
    "rxjs": "~6.5.5",
    "tslib": "^2.0.0",
    "zone.js": "~0.10.2"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.1001.0",
    "@angular-devkit/build-ng-packagr": "~0.1001.0",
    "@angular/cli": "~10.1.0",
    "@angular/compiler-cli": "~10.1.0",
    "@angular/language-service": "~10.1.0",
    "@types/jasmine": "~3.3.13",
    "@types/jasminewd2": "~2.0.3",
    "@types/node": "^12.11.1",
    "codelyzer": "^5.1.2",
    "concurrently": "^5.2.0",
    "cypress": "^5.2.0",
    "jasmine-core": "~3.5.0",
    "jasmine-spec-reporter": "~5.0.0",
    "karma": "~5.0.0",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage-istanbul-reporter": "~3.0.2",
    "karma-jasmine": "~4.0.0",
    "karma-jasmine-html-reporter": "^1.5.0",
    "ng-packagr": "^10.1.0",
    "ts-node": "~8.2.0",
    "tslint": "~6.1.0",
    "typescript": "4.0.2",
    "wait-on": "^3.2.0"
  }
}
