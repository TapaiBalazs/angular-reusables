{
  "name": "ng-reusables",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "concurrently -k -n \"APP,LIB\" -c \"green,magenta\" \"ng serve\" \"npm run build:libs:watch\"",
    "build:libs:watch": "concurrently -k -n \"LI,EH\" -c \"yellow,blue\" \"npm run build:loading-indicator:watch\" \"npm run build:error-handler:watch\"",
    "build:error-handler": "ng build error-handler",
    "build:loading-indicator": "ng build loading-indicator",
    "build:error-handler:watch": "wait-on -i 3000 -t 30000 -l http-get://localhost:4200/ -v && ng build loading-indicator --watch",
    "build:loading-indicator:watch": "wait-on -i 3000 -t 30000 -l http-get://localhost:4200/ -v && ng build error-handler --watch",
    "build": "ng build",
    "test": "ng test loading-indicator --watch false",
    "lint": "ng lint",
    "cypress:open": "wait-on -i 3000 -t 30000 -l http-get://localhost:4200/ -v && cypress open",
    "cypress:run": "cypress run"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "~9.1.11",
    "@angular/cdk": "^8.0.1",
    "@angular/common": "~9.1.11",
    "@angular/compiler": "~9.1.11",
    "@angular/core": "~9.1.11",
    "@angular/forms": "~9.1.11",
    "@angular/platform-browser": "~9.1.11",
    "@angular/platform-browser-dynamic": "~9.1.11",
    "@angular/router": "~9.1.11",
    "@btapai/ng-loading-indicator": "file:dist/loading-indicator",
    "@btapai/ng-error-handler": "file:dist/error-handler",
    "core-js": "^3.1.3",
    "rxjs": "~6.5.5",
    "tslib": "^1.10.0",
    "zone.js": "~0.10.2"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.901.9",
    "@angular-devkit/build-ng-packagr": "~0.901.9",
    "@angular/cli": "~9.1.9",
    "@angular/compiler-cli": "~9.1.11",
    "@angular/language-service": "~9.1.11",
    "@types/jasmine": "~3.3.13",
    "@types/jasminewd2": "~2.0.3",
    "@types/node": "^12.11.1",
    "codelyzer": "^5.1.2",
    "concurrently": "^5.2.0",
    "cypress": "^4.9.0",
    "jasmine-core": "~3.4.0",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "^5.1.0",
    "karma-chrome-launcher": "~2.2.0",
    "karma-coverage-istanbul-reporter": "~2.0.1",
    "karma-jasmine": "~2.0.1",
    "karma-jasmine-html-reporter": "^1.4.2",
    "ng-packagr": "^9.0.0",
    "ts-node": "~8.2.0",
    "tslint": "~5.17.0",
    "typescript": "3.8.3",
    "wait-on": "^3.2.0"
  }
}
