{
  "name": "ng-reusables",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "concurrently -k -n \"APP,LIB\" -c \"green,magenta\" \"ng serve\" \"npm run build:lib:watch\"",
    "build:lib": "ng build loading-indicator",
    "build:lib:watch": "wait-on -i 3000 -t 30000 -l http-get://localhost:4200/ -v && ng build loading-indicator --watch",
    "build": "ng build",
    "test": "ng test loading-indicator --watch false",
    "lint": "ng lint",
    "cypress:open": "wait-on -i 3000 -t 30000 -l http-get://localhost:4200/ -v && cypress open",
    "cypress:run": "cypress run"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "~8.0.0",
    "@angular/common": "~8.0.0",
    "@angular/compiler": "~8.0.0",
    "@angular/core": "~8.0.0",
    "@angular/forms": "~8.0.0",
    "@angular/platform-browser": "~8.0.0",
    "@angular/platform-browser-dynamic": "~8.0.0",
    "@angular/router": "~8.0.0",
    "@btapai/ng-loading-indicator": "file:dist/loading-indicator",
    "core-js": "^3.1.3",
    "rxjs": "~6.5.2",
    "tslib": "^1.9.0",
    "zone.js": "~0.9.1"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.800.0",
    "@angular-devkit/build-ng-packagr": "~0.800.0",
    "@angular/cli": "~8.0.1",
    "@angular/compiler-cli": "~8.0.0",
    "@angular/language-service": "~8.0.0",
    "@types/jasmine": "~3.3.13",
    "@types/jasminewd2": "~2.0.3",
    "@types/node": "~12.0.4",
    "codelyzer": "^5.0.1",
    "concurrently": "^4.1.0",
    "cypress": "^3.3.1",
    "jasmine-core": "~3.4.0",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "~4.1.0",
    "karma-chrome-launcher": "~2.2.0",
    "karma-coverage-istanbul-reporter": "~2.0.1",
    "karma-jasmine": "~2.0.1",
    "karma-jasmine-html-reporter": "^1.4.2",
    "ng-packagr": "^5.2.0",
    "ts-node": "~8.2.0",
    "tsickle": "0.35.0",
    "tslib": "^1.9.0",
    "tslint": "~5.17.0",
    "typescript": "3.4.5",
    "wait-on": "^3.2.0"
  }
}
